

@{
    ViewData["Title"] = "Home Page";
}

<div id="buttons-crud">
    <button class="btn btn-success rounded-pill px-3" onclick="showAddForm('status-select')">Добавить</button>
    <button class="btn btn-warning rounded-pill px-3" onclick="showEditForm('status-select-edit')">Редактировать</button>
    <button class="btn btn-danger rounded-pill px-3" onclick="deleteItem()">Удалить</button>
</div>


<div id="addTask">
    <h3>Добавить задачу</h3>
    <input type="text" id="add-name" placeholder="Наименование" />
    <input type="text" id="add-desc" placeholder="Описание" />
    <select id="status-select">
        <option value="0"></option>
    </select>
    <button class="btn btn-primary d-inline-flex align-items-center" onclick="addTask()" >Добавить</button>
</div>

<div id="editTask">
    <h3>Редактировать задачу</h3>
    <input type="hidden" id="edit-id" />
    <input type="text" id="edit-name" placeholder="Наименование" />
    <input type="text" id="edit-desc" placeholder="Описание" />
    <select id="status-select-edit">
        <option value="0"></option>
    </select>
    <button class="btn btn-primary d-inline-flex align-items-center" onclick="updateItem()">Сохранить</button>
</div>

<table id="my-task-table" width="100%">
    <tr>
        <th>ID</th>
        <th>Наименование</th>
        <th>Описание</th>
        <th>Статус</th>
    </tr>
    <tbody id="todos">
    </tbody>
</table>


<script src="~/js/task.js"></script>
<script src="~/js/button.js"></script>
<script type="text/javascript">
    getStatus(getName);
  //  getItems();
</script>
